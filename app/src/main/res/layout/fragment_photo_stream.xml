<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".stream.ui.PhotoStreamActivity">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/photoGrid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/grid_spacing"
            android:paddingEnd="@dimen/grid_spacing"
            android:paddingTop="50dp"
            android:paddingBottom="@dimen/grid_spacing"
            android:clipToPadding="false"/>

    <ProgressBar
            android:id="@+id/progressIndicator"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="90dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:indeterminate="true"/>

    <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="16dp"
            android:gravity="center_vertical|start"
            android:paddingEnd="16dp"
            android:layout_gravity="top"
            android:background="@color/translucentWhite"
            style="?attr/toolbarTextAppearance"
            tools:text="Toolbar title"/>

</FrameLayout>