<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- App theme -->
    <style name="AppTheme" parent="BaseAppTheme">
        <item name="android:windowBackground">@color/offWhite</item>
        <item name="android:textColor">@color/text</item>
        <item name="toolbarTextAppearance">@style/Text.ToolbarTitle</item>
        <item name="smallTextAppearance">@style/Text.Small</item>
        <item name="mediumTextAppearance">@style/Text.Medium</item>
        <item name="largeTextAppearance">@style/Text.Large</item>
    </style>


</resources>
